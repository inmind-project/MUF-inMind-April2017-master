<DATA>
<!-- This database defines the types of objects, persons and places that
     should be recognized in the current domain.  -->



<TYPE NAME="CONTAINER" CLASS="OBJECT">
<SYMFEATURE NAME="TYPE" TYPICAL="ANY"/>
<SYMFEATURE NAME="SHAPE" TYPICAL="ROUND"/> 
<SYMFEATURE NAME="CONTENTS" TYPICAL="ANY"/>
</TYPE>

<TYPE NAME="PROFESSIONAL" CLASS="PERSON">
<SYMFEATURE NAME="ROLE" TYPICAL="ANY"/>
<SYMFEATURE NAME="TYPE" TYPICAL="REAL"/>
<NUMFEATURE NAME="AGE"  TYPICAL="25-65"/>
<SYMFEATURE NAME="HYPE" TYPICAL="ANY"/>
</TYPE>

<TYPE NAME="LAB" CLASS="PLACE">
<SYMFEATURE NAME="NAME" TYPICAL="ANY"/>
<SYMFEATURE NAME="DISTANCE" TYPICAL="ANY"/>
</TYPE>

<TYPE NAME="HOME" CLASS="PLACE">
<SYMFEATURE NAME="SIZE" TYPICAL="SMALL,REGULAR"/>
<SYMFEATURE NAME="TYPE" TYPICAL="HOUSE,CONDO,APARTMENT"/>
</TYPE>

<TYPE NAME="CONFERENCE" CLASS="PLACE">
<SYMFEATURE NAME="NAME" TYPICAL="ANY"/>
<SYMFEATURE NAME="DISTANCE" TYPICAL="ANY"/>
<SYMFEATURE NAME="YEAR" TYPICAL="1994-2002"/>
</TYPE>

<TYPE NAME="STAIRS" CLASS="OBJECT">
<SYMFEATURE NAME="SHAPE" TYPICAL="STRAIGHT"/>
</TYPE>

<TYPE NAME="SHADER" CLASS="OBJECT">
<SYMFEATURE NAME="TYPE" TYPICAL="TEXTURE"/>
<SYMFEATURE NAME="BITS" TYPICAL="16"/>
</TYPE>

<TYPE NAME="SIGN" CLASS="OBJECT">
<SYMFEATURE NAME="LABEL" TYPICAL="ANY"/>
</TYPE>

<TYPE NAME="AUTO" CLASS="OBJECT">
<SYMFEATURE NAME="TYPE" TYPICAL="ANY"/>
<SYMFEATURE NAME="COLOR" TYPICAL="ANY"/>
</TYPE>

<!-- The following section lists all instances of recognizable objects -->


<INSTANCE OF="STAIRS" ID="STAIRS1" SHAPE="SPIRAL"/>

<INSTANCE OF="SHADER" ID="TEXTURE1" TYPE="TEXTURE" BITS="16"/>

<INSTANCE OF="CONTAINER" ID="BOX1" TYPE="BOX" SHAPE="SQUARE" CONTENTS="CHOCOLATES"/>

<INSTANCE OF="PROFESSIONAL" ID="PUNK1" ROLE="ACTOR" TYPE="VIRTUAL" AGE="25" HYPE="AUTOMATED"/>
<INSTANCE OF="PROFESSIONAL" ID="ALAN1" ROLE="ACTOR" TYPE="REAL" AGE="66" HYPE="POPULAR" />

<INSTANCE OF="HOME" ID="CAVE1" SIZE="SMALL" TYPE="CAVE"/>
<INSTANCE OF="HOME" ID="HOUSE1" SIZE="LARGE" TYPE="HOUSE"/>

<INSTANCE OF="CONFERENCE" ID="SIGGRAPH01" NAME="SIGGRAPH" DISTANCE="HERE" YEAR="2001"/>

<INSTANCE OF="LAB" ID="ML1" NAME="MEDIALAB" DISTANCE="HERE"/>

<INSTANCE OF="AUTO" ID="TRUCK1" TYPE="TRUCK" COLOR="BLUE"/>

<INSTANCE OF="SIGN" ID="WGNL" NAME="W.G.N.L." LABEL="WGNL"/>

<!-- The following groups co-located instances into scenes -->

<SCENE ID="MIT">
   <OBJECT ID="ML1"/>
   <OBJECT ID="TRUCK1"/>
   <OBJECT ID="ALAN1"/>
</SCENE>

<SCENE ID="LOCAL">
   <OBJECT ID="HOUSE1"/>
   <OBJECT ID="TEXTURE1"/>
</SCENE>

<SCENE ID="LOSANGELES">
   <OBJECT ID="SIGGRAPH01"/>
</SCENE>

<!-- The following section asociates iconic gesture shapes with general feature 
     values and verbs-->

<GESTURE TYPE="ICONIC" VALUE="SQUARE">
  <RIGHTARM HANDSHAPE="box" TRAJECTORY="box"/>
  <LEFTARM  HANDSHAPE="box" TRAJECTORY="box"/>
</GESTURE>

<GESTURE TYPE="METAPHORIC" VALUE="VIRTUAL">
  <RIGHTARM HANDSHAPE="virtual" TRAJECTORY="virtual"/>
	<LEFTARM  HANDSHAPE="virtual" TRAJECTORY="virtual"/>
</GESTURE>

<GESTURE TYPE="ICONIC" VALUE="MOVE">
  <RIGHTARM HANDSHAPE="motion" TRAJECTORY="motion"/>
</GESTURE>

<GESTURE TYPE="DEICTIC" VALUE="HERE">
  <RIGHTARM HANDSHAPE="here" TRAJECTORY="here"/>
</GESTURE>

<GESTURE TYPE="ICONIC" VALUE="SHOW">
  <RIGHTARM HANDSHAPE="present" TRAJECTORY="present"/>
</GESTURE>

<GESTURE TYPE="ICONIC" VALUE="DELIVER">
  <RIGHTARM HANDSHAPE="open" TRAJECTORY="present"/>
</GESTURE>
